<mvc:View 
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:core="sap.ui.core"
  height="100%"
  xmlns:mvc="sap.ui.core.mvc"
  >

		<f:GridList
			id="gridListId"
			headerText="{i18n>GridListHeader}"
			items="{ path : 'skill>/EmployeeSkillManager' }">
			<f:GridListItem id="gridListItemId">
				<VBox id="vboxId" 
                      class="sapUiSmallMargin"
                >
					<layoutData>
						<FlexItemData id="flexItemDataId"
                                      growFactor="1"
                                      shrinkFactor="0"                        
                        /> 
					</layoutData>

					    <Title id="titleId"
                               text="{SkillName}"
                               wrapping="true"
                        />
					        <Label id="labelId"
                                   text="{Rating}" 
                                   wrapping="true"
                            />       
                                <RatingIndicator id="ratingId"
                                                 value="{Rating}"
                                                 maxValue="10"
                                                 visualMode="Half"
					                             iconSize="18px"
                                >
				                </RatingIndicator>           
				</VBox>
			</f:GridListItem>
		</f:GridList>
</mvc:View>
<mvc:View 
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  height="100%"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:rte="sap.ui.richtexteditor"
  >
  <FlexBox id="flexBoxId">
      <rte:RichTextEditor id="richTextEditorId"
                          width="100%"
                          height="600px"
                          value="{Description}"
                          showGroupFont="true"
                          showGroupLink="true"
                          showGroupInsert="true" 
                          showGroupFontStyle="true"
                          editable="{= ${ui>/editMode} === 'Display' ? false : true }"
  ></rte:RichTextEditor>     
</FlexBox>
</mvc:View>
<mvc:View 
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  height="100%"
  xmlns:mvc="sap.ui.core.mvc"
  >
  <FlexBox id="flexBoxFeedbackId">
  <VBox id="textVBoxId"
  >
    <Text id="customerQuotesTextId"
        text="{i18n>customerQuotesText}" 
        wrapping="true"
  >
  </Text>
  </VBox>
      <MultiInput id="multilineTextCustomerFeedbackId"
                  enabled="true"
                  enableSuggestionsHighlighting="false"
                  enableTableAutoPopinMode="false"
                  editable="{= ${ui>/editMode} === 'Display' ? false : true }"
                  value="{CustomerQuotes}"

  ></MultiInput>
</FlexBox>
</mvc:View> 